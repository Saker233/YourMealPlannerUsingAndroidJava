<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:text="@string/emailreg"
        android:textColor="#42b3f5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTxtRegEmail"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/enter_your_email"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/password"
        android:textColor="#42b3f5"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtRegEmail" />

    <EditText
        android:id="@+id/edtTxtRegPass"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/enter_your_password"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/confirmpass"
        android:textColor="#42b3f5"
        app:layout_constraintStart_toStartOf="@+id/edtTxtRegPass"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtRegPass" />

    <EditText
        android:id="@+id/edtTxtRegConPass"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/confirmpasstxt"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/btnRegRegister"
        android:layout_width="253dp"
        android:layout_height="68dp"
        android:layout_marginTop="59dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtRegConPass"
        app:srcCompat="@drawable/registerbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>